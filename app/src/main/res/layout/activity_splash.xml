<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.catch32.zumpbeta.activity.SplashActivity">

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/zump_logo_final" />

    <TextView
        android:id="@+id/zump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_view"
        android:layout_gravity="center"
        android:autoText="false"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:text="Zump. Start. Business."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/logocolor1"
        android:textSize="15dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/zump"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:autoText="false"
        android:gravity="center"
        android:text="Retail Ordering System\nconnect@zump.co.in\nCopyright &#169;BP-2020. All Rights Reserved."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/BLUE"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblzumplink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_gravity="center"
        android:autoText="false"
        android:gravity="center"
        android:text="www.zump.co.in"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/BLUE"
        android:textSize="14dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:autoText="false"
        android:gravity="center"
        android:text="\n\nSay no to single-use Plastic."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/red_500"
        android:textSize="15dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_top2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:autoText="false"
        android:gravity="center"
        android:text="\nSave Water. Go Paperless."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/green_500"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>