<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/SummaryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="39"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="3dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_Po"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="1dp"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="1)PO#24000029"/>
                <TextView
                    android:id="@+id/txt_Dt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="1dp"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="2)DT:05/07/2020 (Delivered)"/>
                <TextView
                    android:id="@+id/txt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="1dp"
                    android:textSize="11dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="3)Count.:50.0000%"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent">
                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:background="@color/txthintcolor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="20"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_h2Amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/txtblue"
                    android:fontFamily="@font/ubuntu_medium"
                    android:padding="3dp"
                    android:textSize="12dp"
                    android:text="999,999.00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent">
                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:background="@color/txthintcolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="19"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_h3Amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/txtblue"
                    android:fontFamily="@font/ubuntu_medium"
                    android:padding="2dp"
                    android:textSize="12dp"
                    android:text="999,999.00"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent">
                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:background="@color/txthintcolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="22"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_h4Amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textSize="12dp"
                    android:padding="1dp"
                    android:text="999.00(99%)"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/txthintcolor"/>
</LinearLayout>
