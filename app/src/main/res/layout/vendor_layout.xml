<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rectangle_with_white_gradient_bg"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/llTitle"
            android:weightSum="20"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:background="@drawable/black_gradient_bg"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="18"
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_weight="15"
                    android:layout_width="match_parent"
                    android:id="@+id/txtVendorName"
                    android:layout_height="wrap_content"
                    android:text="Vendor Name"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_weight="15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtVendorProductCount"
                    android:text="Total Products"
                    android:textColor="@color/white"
                    android:textSize="12dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:src="@drawable/down_arrow_white"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/llDef1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/rectangle_with_white_gradient_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/rectangle_with_yellow"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Data of Financial year 2020-21"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/vendorSummaryTitle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:id="@+id/llSummary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="32"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:paddingTop="5dp"
                            android:layout_margin="3dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Total LP (₹)"
                                android:fontFamily="@font/ubuntu"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtVendorLP"
                                android:gravity="center"
                                android:fontFamily="@font/ubuntu"
                                android:layout_gravity="center_horizontal"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/black_thin_line"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:paddingTop="5dp"
                            android:layout_margin="3dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Total TRP (₹)"
                                android:fontFamily="@font/ubuntu"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtVendorTRP"
                                android:gravity="center"
                                android:fontFamily="@font/ubuntu"
                                android:layout_gravity="center_horizontal"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/black_thin_line"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:paddingTop="5dp"
                            android:layout_margin="3dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Total GST(₹)"
                                android:fontFamily="@font/ubuntu"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtVendorGST"
                                android:gravity="center"
                                android:fontFamily="@font/ubuntu"
                                android:layout_gravity="center_horizontal"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/black"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="1dp">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="32"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:paddingTop="5dp"
                            android:layout_margin="3dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Total Order Qty"
                                android:fontFamily="@font/ubuntu"
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/ubuntu"
                                android:layout_gravity="center_horizontal"
                                android:text="(+Scheme)units"
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtVendorQty"
                                android:gravity="center"
                                android:fontFamily="@font/ubuntu"
                                android:layout_gravity="center_horizontal"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/black_thin_line"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_margin="3dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Total Scheme Mgn."
                                android:fontFamily="@font/ubuntu"
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:text="*(₹)%"
                                android:fontFamily="@font/ubuntu"
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtVendorSchemeMgn"
                                android:gravity="center"
                                android:fontFamily="@font/ubuntu"
                                android:layout_gravity="center_horizontal"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/black_thin_line"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_margin="3dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Total Trd. Mgn."
                                android:fontFamily="@font/ubuntu"
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/ubuntu"
                                android:layout_gravity="center_horizontal"
                                android:text="*(₹)%"
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtVendorTrdMgn"
                                android:gravity="center"
                                android:fontFamily="@font/ubuntu"
                                android:layout_gravity="center_horizontal"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:padding="5dp"
                android:text="Product Item(s) Data (based on filters)"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlProductSummaries"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
