<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_alignParentRight="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llFooter"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:background="@android:color/white"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/yellow_thin_line"
            android:layout_height="2dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="16"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:id="@+id/llHome">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_home_run"
                    android:layout_height="28dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Home"/>
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:background="@drawable/light_gray_thin_line"
                android:layout_marginBottom="3dp"
                android:layout_height="match_parent">
            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_summary"
                    android:layout_height="28dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Reports and\nQuick order"/>
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:background="@drawable/light_gray_thin_line"
                android:layout_marginBottom="3dp"
                android:layout_height="match_parent">
            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_margin="1dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:id="@+id/llOrderStatus">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_order"
                    android:layout_height="28dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="My Orders"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_button_red"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="#ffff"
                        android:text="9999"
                        android:textSize="11dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:background="@drawable/light_gray_thin_line"
                android:layout_marginBottom="3dp"
                android:layout_height="match_parent">
            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:id="@+id/llMonthwiseSummary">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_schedule"
                    android:layout_height="28dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Monthwise Summary"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>